            android:theme="@style/Tema1" />
        <activity
            android:name="com.example.kampusku.UpdateData"
            android:label="Update Data"
            android:parentActivityName="com.example.kampusku.UpdateData"
            android:theme="@style/Tema1" />
        <activity
            android:name="com.example.kampusku.DetailData"
            android:label="Detail Data"
            android:parentActivityName="com.example.kampusku.DetailData"
            android:theme="@style/Tema1" />
    </application>

</manifest>